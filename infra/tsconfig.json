{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "dist"
  },
  "include": ["bin/**/*.ts","lib/**/*.ts"],
  "exclude": ["node_modules","dist","lambda"]
}
